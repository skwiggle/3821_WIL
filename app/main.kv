#: import Window kivy.core.window.Window
#: import MDApp kivymd.app.MDApp
#: import ListProperty kivy.properties.ListProperty
#: import MDLabel kivymd.uix.label.MDLabel
#: import MDRaisedButton kivymd.uix.button.MDRaisedButton
#: import MDFlatButton kivymd.uix.button.MDFlatButton
#: import MDIconButton kivymd.uix.button.MDIconButton
#: import MDTextField kivymd.uix.textfield.MDTextField
#: import MDSpinner kivymd.uix.spinner.MDSpinner
#: import Svg kivy.graphics.svg.Svg
#: import hex kivy.utils.get_color_from_hex
#: import CoreImage kivy.uix.image.Image
#: import MDDialog kivymd.uix.dialog.MDDialog
#:import Factory kivy.factory.Factory


<IPInput@MDTextField>:
    hint_text: "e.g. 255.255.255.255"
    required: True
    max_text_length: 15

<RefreshBaseBtn>:
    source: './ui/icon/refresh/refresh_icon_256x256.png'

<ReconnectBtn>:
    source: './ui/icon/reconnect/reconnect_btn_256x256.png'
    on_press: app.reconnect()

<DebugLayerFocused@BoxLayout>:
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1)  # log screen background color
        RoundedRectangle:
            radius: [25, 25, 25, 25]
            size: root.width, Window.height*.25
            pos: root.pos

<DebugLayer@BoxLayout>:
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1)  # log screen background color
        RoundedRectangle:
            radius: [sp(25), sp(25), sp(25), sp(25)]
            size: root.width, Window.height*.445
            pos: root.pos

<DebugPanelFocused@RecycleView>:
    viewclass: 'DataCell'
    RecycleGridLayout:
        orientation: 'vertical'
        cols: 1
        padding: 25
        default_size: None, dp(50)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height

<DebugPanel@RecycleView>:
    viewclass: 'DataCell'
    RecycleGridLayout:
        orientation: 'vertical'
        cols: 1
        padding: sp(25)
        default_size: None, sp(50)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height

<DataCell@MDLabel>:
    size_hint_y: None
    markup: True
    text_size: self.width, None
    height: self.texture_size[1] + dp(1)
    theme_text_color: 'Custom'
    text_color: [0, 0.68, 0, 1]

<ClearBtn>:
    text: "[color=#FFFFFF][size=22sp][b]Clear[/b][/size][/color]"
    markup: True
    background_color: 0, 0, 0, 0
    size_hint_x: .98
    height: Window.height*0.089
    on_press: app.clear_content()
    canvas.before:
        Color:
            rgba: .91, 0, .46, 1
        RoundedRectangle:
            radius: [self.size[1]/5, self.size[1]/5, self.size[1]/5, self.size[1]/5]
            size: self.size
            pos: self.pos

<SendBtn>:
    text: "[color=#FFFFFF][size=22sp][b]Send[/b][/size][/color]"
    markup: True
    background_color: 0, 0, 0, 0
    size_hint_x: .98
    height: Window.height*0.089
    on_press: app.send_command()
    canvas.before:
        Color:
            rgba: .26, .73, .81, 1
        RoundedRectangle:
            radius: [self.size[1]/5, self.size[1]/5, self.size[1]/5, self.size[1]/5]
            size: self.size
            pos: self.pos

<Input>:
    canvas.before:
        Color:
            rgba: .17, .59, .8, 1
        RoundedRectangle:
            radius: [self.height/5, self.height/5, self.height/5, self.height/5]
            size: root.size
            pos: root.pos

<Content@TextInput>:
    font_size: '24sp'
    foreground_color: 1, 1, 1, 1
    background_color: 0, 0, 0, 0
    multiline: False
    on_focus: app.on_input_focus()

<StartScreen@Screen>:
    name: 'start'
    canvas.before:
        Rectangle:
            source: './ui/background/background_start.png'
            size: Window.size
            pos: (0, 0)
    BoxLayout:
        id: popup
        size_hint: .75, .55
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
        BoxLayout:
            orientation: 'vertical'
            padding: [sp(20), sp(20), sp(20), sp(20)]
            spacing: sp(1)
            size_hint: 1, 1
            canvas.before:
                Color:
                    rgba: .1, .1, .1, 1
                RoundedRectangle:
                    radius: [sp(20), sp(20), sp(20), sp(20)]
                    size: self.size
                    pos: self.pos
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, .5
                MDLabel:
                    size_hint: 1, .4
                    markup: True
                    text: "[size=14sp][color=#777777][b]HOST[/b]: The PRIVATE IPv4 Address of this device. Can be found on most android phones by going to [b]settings > wifi > NETWORK_NAME > IP address[/b]\n\n[b]TARGET[/b]: The PRIVATE IPv4 address of the machine hosting the terminal, can be found by typing [b]ipconfig[/b] (Windows) or [b]ifconfig[/b] (Mac/Linux) into the command prompt window on the terminal's machine[/color][/size]"
                    theme_text_color: 'Custom'
                    text_color: [1, 1, 1, 1]
            GridLayout:
                cols: 3
                rows: 2
                orientation: 'vertical'
                size_hint: 1, .35
                MDLabel:
                    size_hint: .19, 1
                    markup: True
                    text: "[size=14sp][color=#FFFFFF]Host:[/color][/size]"
                IPInput:
                    id: host_ip
                    size_hint: .71, 1
                RefreshBaseBtn:
                    size_hint: .1, 1
                    padding: [sp(10), sp(10), sp(10), sp(10)]
                    on_press: app.refresh_host()
                MDLabel:
                    size_hint: .19, 1
                    markup: True
                    text: "[size=14sp][color=#FFFFFF]Target:   [/color][/size]"
                IPInput:
                    id: target_ip
                    size_hint: .71, 1
                RefreshBaseBtn:
                    size_hint: .1, 1
                    padding: [sp(10), sp(10), sp(10), sp(10)]
                    on_press: app.refresh_target()
            MDRaisedButton:
                size_hint: 1, .15
                text: "[size=16sp][b]save[/b][/size]"
                markup: True
                on_press: app.start_screen_submit()


<MainScreen@Screen>:
    name: 'main'
    on_enter: self.ids['cmd_input'].text = app.cmd_text
    canvas.before:
        Rectangle:
            source: './ui/background/background_main.png'
            size: Window.size
            pos: (0, 0)
    FloatLayout:
        id: static
        BoxLayout:
            id: body
            orientation: 'vertical'
            size: Window.size
            padding: [sp(20), 0, sp(20), 0]
            Widget:
                id: spacer
                size_hint_y: .14
            DebugLayer:
                id: debug_layer
                size_hint_y: .445
                padding: [0, sp(5), 0, sp(5)]
                DebugPanel:
                    id: debug_panel
            BoxLayout:
                id: reconnect_layout
                cols: 2
                size_hint_x: None
                size_hint_y: .082
                ReconnectBtn:
                    id: reconnect_btn
                    size_hint_y: .6
                    pos_hint: {'center_y': .5, 'x': 0}
            BoxLayout:
                id: input_layout
                orientation: 'vertical'
                size_hint_y: .333
                Input:
                    id: input_box
                    size_hint_y: .31
                    Content:
                        id: cmd_input
                        size: (input_box.width-sp(40), input_box.height)
                        pos_hint: {'center_x': .5}
                        pos: (input_box.pos[0]+sp(20), input_box.pos[1]-(input_box.height/2)+sp(20))
                Widget:
                    size_hint_y: .16
                GridLayout:
                    id: button_layout
                    cols: 2
                    size_hint_y: .26
                    AnchorLayout:
                        anchor_x: 'left'
                        anchor_y: 'top'
                        ClearBtn:
                            id: clear_btn
                            pos_hint: {'center_y': .5}
                    AnchorLayout:
                        anchor_x: 'right'
                        anchor_y: 'top'
                        SendBtn:
                            id: send_btn
                            pos_hint: {'center_y': .5}
                Widget:
                    size_hint_y: .27

<InputFocusedScreen@Screen>:
    name: 'input_focused'
    on_enter: self.ids['debug_panel_focused'].data = app.debug_data
    canvas.before:
        Rectangle:
            source: './ui/background/background_focused.png'
            size: Window.size
            pos: (0, 0)
    BoxLayout:
        id: body
        orientation: 'vertical'
        size: Window.size
        padding: [sp(20), 0, sp(20), 0]
        Widget:
            size_hint: 1, .08
        DebugLayerFocused:
            id: debug_layer_focused
            size_hint: 1, .25
            padding: [0, sp(5), 0, sp(5)]
            DebugPanelFocused:
                id: debug_panel_focused
        Widget:
            size_hint: 1, .07
        BoxLayout:
            id: input_layout
            orientation: 'vertical'
            size_hint: 1, .12
            Input:
                id: input_box
                size_hint_y: 1
                Content:
                    id: cmd_input_focused
                    size: (input_box.width-sp(40), input_box.height)
                    pos_hint: {'center_x': .5}
                    pos: (input_box.pos[0]+sp(20), input_box.pos[1]-(input_box.height/2)+sp(20))
        Widget:
            id: bottom_half
            size_hint: 1, .48

<AppManager@ScreenManager>:
    StartScreen:
    MainScreen:
    InputFocusedScreen:

AppManager:





