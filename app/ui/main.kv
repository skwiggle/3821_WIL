#: import Window kivy.core.window.Window
#: import MDApp kivymd.app.MDApp
#: import ListProperty kivy.properties.ListProperty
#: import MDLabel kivymd.label.MDLabel
#: import MDButton kivymd.button.MDRaisedButton
#: import MDTextField kivymd.textfields.MDTextField
#: import MDSpinner kivymd.spinner.MDSpinner
#: import MDIconButton kivymd.button.MDIconButton
<RefreshBtn>:
    icon: './icon/refresh/refresh_icon_64x64'
    height: 20
    on_press: app.setup()

Widget:
    id: main_widget
    size: Window.size
    GridLayout:
        id: main
        size: root.size
        cols: 1
        padding: app.padding_def
        spacing: app.padding_def/2
        BoxLayout:
            id: debug_panel
            size_hint: (1, 0.8)
            orientation: "vertical"
            padding: [20, 0]
            canvas:
                Color:
                    rgba: 0, 0, 0, .2
                Rectangle:
                    size: debug_panel.size
                    pos: debug_panel.pos
            ScrollView:
                GridLayout:
                    id: content_layout
                    cols:1
                    row_default_height: 30
                    size_hint_y: None
                    height: self.minimum_height
        MDIconButton:
            id: reconnect
            icon: 'wifi'
            height: 20
            pos_hint: {'right': 1}
            on_press: app.setup()
        BoxLayout:
            id: cmd_panel
            orientation: 'vertical'
            spacing: 10
            MDTextField:
                id: cmd_input
                size_hint_y: None
                height: 60
                font_size: '20sp'
            MDRaisedButton:
                id: send_btn
                height: 20
                text: 'send'
                md_bg_color: (0.2, 0.6, 1, 1)
                specific_text_color: [1, 1, 1, 0.87]
                pos_hint: {'right': 1}
                on_press: app.send_command()


