#: import Window kivy.core.window.Window
#: import MDApp kivymd.app.MDApp
#: import ListProperty kivy.properties.ListProperty
#: import MDLabel kivymd.uix.label.MDLabel
#: import MDButton kivymd.uix.button.MDRaisedButton
#: import MDIconButton kivymd.uix.button.MDIconButton
#: import MDTextField kivymd.uix.textfield.MDTextField
#: import MDSpinner kivymd.uix.spinner.MDSpinner
#: import hex kivy.utils.get_color_from_hex




<RefreshBtn>:
    icon: './icon/refresh/refresh_icon_64x64'
    height: 20
    on_press: app.setup()

<DataCell@MDLabel>:
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
    theme_text_color: 'Custom'
    text_color: [0, 0.68, 0, 1]

<DebugPanel@RecycleView>:
    viewclass: 'DataCell'
    canvas.before:
        Color:
            rgba: (0.09, 0.13, 0.13, 1)  # log screen background color
        Rectangle:
            size: root.size
            pos: root.pos
    RecycleGridLayout:
        cols: 1
        padding: 10
        default_size: None, dp(40)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

Widget:
    id: main_widget
    size: Window.size
    canvas:
        Color:
            rgba: (0, 0, 0.502, 0.6)  # background color main
        Rectangle:
            size: Window.size
            pos: (0, 0)
    GridLayout:
        id: main
        size: root.size
        cols: 1
        padding: app.padding_def
        spacing: app.padding_def/2
        DebugPanel:
            id: debug_panel
        StackLayout:
            id: debug_taskbar
            size_hint: (1, 0.08)
            MDIconButton:
                id: reconnect
                icon: 'wifi'
                height: 20
                pos_hint: {'right': 1}
                on_press: app.alt_update()
                disabled: False
        BoxLayout:
            id: cmd_panel
            orientation: 'vertical'
            size_hint: (1, 0.1)
            spacing: 10
            MDTextField:
                id: cmd_input
                size_hint_y: None

                height: 60
                font_size: '20sp'
                md_bg_color: hex('#E80076')
                specific_text_color: hex('#000000')
        GridLayout:
            id: bottom_panel
            cols: 2
            size_hint: (1, 0.1)
            MDRaisedButton:
                id: clear_btn
                height: 50
                text: 'clear'
                pos_hint: {'right': 1}
                md_bg_color: hex('#E80076')
                specific_text_color: hex('#EBE9E9')
                on_press: app.clear_content()
            MDRaisedButton:
                id: send_btn
                height: 50
                text: 'send'
                pos_hint: {'right': 1}
                md_bg_color: hex('#42BBCE')
                specific_text_color: hex('#EBE9E9')
                on_press: app.send_command()



