#: import Window kivy.core.window.Window
#: import MDApp kivymd.app.MDApp
#: import ListProperty kivy.properties.ListProperty
#: import MDLabel kivymd.label.MDLabel
#: import MDButton kivymd.button.MDRaisedButton
#: import MDTextField kivymd.textfields.MDTextField
#: import MDSpinner kivymd.spinner.MDSpinner
#: import MDIconButton kivymd.button.MDIconButton
<RefreshBtn>:
    icon: './icon/refresh/refresh_icon_64x64'
    height: 20
    on_press: app.setup()

Widget:
    id: main_widget
    size: Window.size
    canvas:
        Color:
            rgba: (0.57, 0.87, 0.87, 1)
        Rectangle:
            size: Window.size
            pos: (0, 0)
    GridLayout:
        id: main
        size: root.size
        cols: 1
        padding: app.padding_def
        spacing: app.padding_def/2
        BoxLayout:
            id: debug_panel
            size_hint: (1, 0.5)
            orientation: "vertical"
            ScrollView:
                id: scroll
                canvas:
                    Color:
                        rgba: (0.09, 0.13, 0.13, .5)
                    Rectangle:
                        size: root.size
                        pos: root.pos
                GridLayout:
                    id: content_layout
                    cols:1
                    padding: [10, 0, 10, 0]
                    row_default_height: 50
                    size_hint_y: None
                    height: self.minimum_height
        StackLayout:
            id: debug_taskbar
            size_hint: (1, 0.05)
            MDIconButton:
                id: reconnect
                icon: 'wifi'
                height: 20
                pos_hint: {'right': 1}
                on_press: app.something()
        BoxLayout:
            id: cmd_panel
            orientation: 'vertical'
            size_hint: (1, 0.2)
            spacing: 10
            canvas:
                Color:
                    rgba: (0, 0, 0, 1)
                Rectangle:
                    size: cmd_panel.size
                    pos: cmd_panel.pos
            MDTextField:
                id: cmd_input
                size_hint_y: None
                height: 60
                font_size: '20sp'
                specific_text_color: [1, 0, 1, 1]
        BoxLayout:
            id: bottom_panel
            size_hint: (1, 0.25)
            MDRaisedButton:
                id: send_btn
                height: 50
                text: 'send'
                pos_hint: {'right': 1}
                md_bg_color: (0.2, 0.6, 1, 1)
                specific_text_color: [1, 1, 1, 0.87]
                on_press: app.send_command()


