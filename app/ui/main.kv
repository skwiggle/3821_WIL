#: import Window kivy.core.window.Window
#: import MDApp kivymd.app.MDApp
#: import MDLabel kivymd.label.MDLabel
#: import MDButton kivymd.button.MDRaisedButton
#: import MDTextField kivymd.textfields.MDTextField
#: import MDTabbedPanel kivymd.tabs.MDTabbedPanel
#: import MDTab kivymd.tabs.MDTab

<CmdPanel@BoxLayout>:
    id: cmd_panel
    orientation: 'vertical'
    spacing: 10
    GridLayout:
        id: client_active
        cols: 4
        spacing: [10, 0]
        MDRaisedButton:
            height: 20
            text: 'Client 1'
            md_bg_color: (0.2, 0.5, 0.1, 1)
            specific_text_color: [1, 1, 1, 0.87]
        MDRaisedButton:
            height: 20
            text: 'Client 2'
            md_bg_color: (.8, 0, 0, 1)
            specific_text_color: [1, 1, 1, 0.87]
        MDRaisedButton:
            height: 20
            text: 'Client 3'
            md_bg_color: (.8, 0, 0, 1)
            specific_text_color: [1, 1, 1, 0.87]
        MDRaisedButton:
            height: 20
            text: 'Client 4'
            md_bg_color: (.8, 0, 0, 1)
            specific_text_color: [1, 1, 1, 0.87]
    MDTextField:
        id: cmd_input
        size_hint_y: None
        height: 60
        font_size: '12sp'
    MDRaisedButton:
        id: send_btn
        height: 20
        text: 'send'
        md_bg_color: (0.2, 0.6, 1, 1)
        specific_text_color: [1, 1, 1, 0.87]
        pos_hint: {'right': 1}

<Content@GridLayout>:
    cols:1
    row_default_height: 30
    size_hint_y: None
    height: self.minimum_height

<DebugPanel@BoxLayout>:
    id: debug_panel
    orientation: "vertical"
    padding: [20, 0]
    canvas:
        Color:
            rgba: 0, 0, 0, .2
        Rectangle:
            size: debug_panel.size
            pos: debug_panel.pos
    layout: content_layout
    ScrollView:
        Content:
            id: content_layout

GridLayout:
    id: main
    cols: 1
    padding: app.padding_def
    spacing: app.padding_def/2
    DebugPanel:
        size_hint: (1, 0.8)
    CmdPanel:
        size_hint: (1, 0.2)
