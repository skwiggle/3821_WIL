#: import Window kivy.core.window.Window
#: import MDApp kivymd.app.MDApp
#: import ListProperty kivy.properties.ListProperty
#: import MDLabel kivymd.label.MDLabel
#: import MDButton kivymd.button.MDRaisedButton
#: import MDTextField kivymd.textfields.MDTextField
#: import MDSpinner kivymd.spinner.MDSpinner

<Manager@ScreenManager>:
    id: manager
    Screen:
        name: 'loading'
        Button:
            id: start_btn
            text: app.status
            on_press: root.setup()
        MDSpinner:
            id: load_icon
            size_hint: (None, None)
            size: (50, 50)
            pos_hint: {'center_x': .5, 'center_y': .4}
    Screen:
        name: 'main'
        Widget:
            id: main_widget
            size: Window.size
            GridLayout:
                id: main
                size: root.size
                cols: 1
                padding: app.padding_def
                spacing: app.padding_def/2
                BoxLayout:
                    id: debug_panel
                    size_hint: (1, 0.8)
                    orientation: "vertical"
                    padding: [20, 0]
                    canvas:
                        Color:
                            rgba: 0, 0, 0, .2
                        Rectangle:
                            size: debug_panel.size
                            pos: debug_panel.pos
                    ScrollView:
                        GridLayout:
                            id: content_layout
                            cols:1
                            row_default_height: 30
                            size_hint_y: None
                            height: self.minimum_height
                BoxLayout:
                    id: cmd_panel
                    orientation: 'vertical'
                    spacing: 10
                    MDTextField:
                        id: cmd_input
                        size_hint_y: None
                        height: 60
                        font_size: '12sp'
                    MDRaisedButton:
                        id: send_btn
                        height: 20
                        text: 'send'
                        md_bg_color: (0.2, 0.6, 1, 1)
                        specific_text_color: [1, 1, 1, 0.87]
                        pos_hint: {'right': 1}

Manager:
